<!DOCTYPE html>
<html>
    <head>
        <title>Ecademy</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
        <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
        <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
    </head>

    <body>
        <div id="flex-content-container">
            <nav class="navbar navbar-dark bg-inverse">
                <%= link_to 'Ecademy', root_path, class: "navbar-brand" %>

                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <%= link_to 'View all courses', courses_path, class: 'nav-link' %>
                    </li>
                </ul>
                <ul class="nav navbar-nav float-xs-right">
                    <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to 'Dashboard', dashboard_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link" %>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
                    </li>
                    <% end %>
                </ul>
            </nav>

            <% if notice.present? %>
            <p class="alert alert-info"><%= notice %></p>
            <% end %>
            <% if alert.present? %>
            <p class="alert alert-danger"><%= alert %></p>
            <% end %>
            <%= yield %>
        </div>

        <div id="footer">
            <div class="container">
                <div class="col-xs-12 col-sm-3">
                    <em>Teachers:
                    </em>
                    <br/>
                    <%= link_to 'Teach a course',  new_instructor_course_path %>
                    <br />
                    <%= link_to 'My Dashboard', dashboard_path %>
                </div>
                <div class="col-xs-12 col-sm-3">
                  <em>About</em>
                  <br />
                  <%= link_to 'Team', '#' %>
                  <br />
                  <%= link_to 'Careers', '#' %>
                  <br />
                  <%= link_to 'Privacy Policy', privacy_path %>
                </div>
                <div class="col-xs-12 col-sm-3">
                  <em>Contact</em>
                  <br />
                  arwen0603@gmail.com
                  <br />
                  Locust Valley
                  <br />
                  NY, 11560
                </div>
                <div class="col-xs-12 col-sm-3 social">
                  <em>Social</em>
                  <br />
                  <%= link_to 'https://github.com/SijiaDavis' do %>
                    <span class="fa fa-github-square fa-2x social-button"></span>
                  <% end %>
                  <%= link_to '#' do %>
                    <span class="fa fa-twitter-square fa-2x social-button"></span>
                  <% end %>
                </div>
            </div>
        </div>
    </body>
</html>